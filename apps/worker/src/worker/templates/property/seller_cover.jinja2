{#
    Seller Report - Cover Page
    Converted from: application/views/reports/english/seller/pages/1.php

    Required variables:
    - property.street       : Street address
    - property.city         : City name
    - property.state        : State abbreviation
    - property.zip          : ZIP code
    - agent.name            : Agent full name
    - agent.title           : Agent title/position (optional)
    - agent.license_number  : License number
    - agent.phone           : Phone number
    - agent.email           : Email address
    - agent.company_name    : Company name
    - agent.company_address : Company street address (optional)
    - agent.company_city    : Company city (optional)
    - agent.company_state   : Company state (optional)
    - agent.company_zip     : Company ZIP (optional)
    - agent.photo_url       : Agent profile photo URL (optional)
    - agent.logo_url        : Company logo URL (optional)
    - theme_color           : Hex color for theme accents (default: #0d294b)
    - cover_image_url       : Background/cover image URL (optional)
#}

{% extends "seller_base.jinja2" %}

{% block title %}Cover{% endblock %}

{% block content %}
<div class="container">
    <div class="section">
        <div class="body">
            {# Cover Image #}
            {% if cover_image_url %}
            <img width="100%" class="img-responsive cover-image" src="{{ cover_image_url }}" alt="Property Cover">
            {% else %}
            <div style="width: 100%; height: 400px; background: linear-gradient(135deg, {{ theme_color | default('#0d294b') }} 0%, #1a3a5c 100%);"></div>
            {% endif %}

            {# Property Address Section #}
            <div class="section-content">
                <p>Seller's Report</p>
                <h1>{{ property.street }}</h1>

                <div class="line" style="background-color: {{ theme_color | default('#0d294b') }};"></div>

                <p>{{ property.city }}, {{ property.state }} {{ property.zip }}</p>
            </div>
        </div>

        {# Footer with Agent Info #}
        <div class="footer" style="background-color: {{ theme_color | default('#0d294b') }};">
            <div class="row">
                <div class="footer-inner">
                    <div class="col-xs-12">
                        <div class="left-footer pull-left">
                            <div class="row">
                                {# Agent Photo #}
                                {% if agent.photo_url %}
                                <div class="col-xs-6">
                                    <img class="img-cover" src="{{ agent.photo_url }}" alt="{{ agent.name }}">
                                </div>
                                {% endif %}

                                {# Agent Details #}
                                <div class="{% if agent.photo_url %}col-xs-6{% else %}col-xs-9{% endif %}">
                                    <h4 class="client-name">{{ agent.name }}</h4>
                                    {% if agent.title %}
                                    <p class="client-detail">{{ agent.title }}</p>
                                    {% endif %}
                                    {% if agent.license_number %}
                                    <p class="client-detail">License #{{ agent.license_number }}</p>
                                    {% endif %}
                                    {% if agent.phone %}
                                    <p class="client-detail">Direct: {{ agent.phone }}</p>
                                    {% endif %}
                                    {% if agent.email %}
                                    <p class="client-detail">{{ agent.email }}</p>
                                    {% endif %}
                                    {% if agent.company_name %}
                                    <p class="client-detail">{{ agent.company_name }}</p>
                                    {% endif %}
                                    {% if agent.company_address %}
                                    <p class="client-detail">{{ agent.company_address }}</p>
                                    {% endif %}
                                    {% if agent.company_city %}
                                    <p class="client-detail">{{ agent.company_city }}, {{ agent.company_state }} {{ agent.company_zip }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        {# Company Logo #}
                        <div class="right-footer pull-right">
                            {% if agent.logo_url %}
                            <img src="{{ agent.logo_url }}" alt="{{ agent.company_name }} Logo">
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
