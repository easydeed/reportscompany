        <img src="{{ comp.photo_url | default(comp.map_image_url) }}" alt="{{ comp.address }}">
        {% endif %}
      </div>
      <div class="classic-comp-body">
        <div class="classic-comp-stats">
          <div class="classic-comp-stat"><div class="lbl">Sold</div><div class="val">{{ comp.sold_date }}</div></div>
          <div class="classic-comp-stat"><div class="lbl">Sq.Ft.</div><div class="val">{{ comp.sqft | format_number }}</div></div>
          <div class="classic-comp-stat"><div class="lbl">Bed/Bath</div><div class="val">{{ comp.bedrooms }}/{{ comp.bathrooms }}</div></div>
          <div class="classic-comp-stat"><div class="lbl">$/Sq.Ft.</div><div class="val">{{ comp.price_per_sqft | format_currency }}</div></div>
