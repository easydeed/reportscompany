{% endblock %}

{# =============================================================================
   RANGE PAGE OVERRIDE — Page-framed, refined bar, dotted dividers
   ============================================================================= #}
{% block range %}
<div class="page-content">
  <div class="classic-range-frame">
    {{ macros.page_header('Range of Sales', 'Price Positioning Analysis') }}

    <div class="classic-range-stats">
      <div class="classic-range-stat">
        <div class="num">{{ stats.total_comps }}</div>
        <div class="lbl">Total Comps</div>
      </div>
      <div class="classic-range-stat">
        <div class="num">{{ stats.avg_sqft | default(0) | int }}</div>
        <div class="lbl">Avg Sq Ft</div>
      </div>
      <div class="classic-range-stat">
        <div class="num">{{ stats.avg_beds | default(0) | round(1) }}</div>
        <div class="lbl">Avg Beds</div>
      </div>
      <div class="classic-range-stat">
        <div class="num">{{ stats.avg_baths | default(0) | round(1) }}</div>
        <div class="lbl">Avg Baths</div>
      </div>
    </div>

    <div class="classic-range-slider">
      <div class="classic-range-slider-header">
        <div class="classic-range-slider-price">{{ stats.price_low | format_currency_short }}</div>
        <div class="classic-range-slider-price">{{ stats.price_high | format_currency_short }}</div>
      </div>
      <div class="classic-range-track">
        {% set subj_price = stats.piq.price | default(0, true) | float %}
        {% set r_low = stats.price_low | default(0, true) | float %}
        {% set r_high = stats.price_high | default(0, true) | float %}
        {% if r_high != r_low and subj_price > 0 %}
        {% set pct = ((subj_price - r_low) / (r_high - r_low) * 100) | int %}
        <div class="classic-range-dot" style="left:{{ pct }}%;"></div>
        {% endif %}
      </div>
    </div>

    <hr class="classic-dotted-divider">

    <div class="classic-section-title">Comparable Sales Summary</div>
    <div class="classic-range-comps">
      {% for comp in comparables[:4] | sort(attribute='sale_price') %}
      <div class="classic-range-comp">
        <span class="addr">{{ comp.address }}</span>
        <span class="dist">{{ comp.distance_miles }} mi</span>
        <span class="price">{{ comp.sale_price | format_currency }}</span>
      </div>
      {% endfor %}
    </div>

    <p class="classic-range-note">
      Based on {{ stats.total_comps }} comparable sales, the estimated market value for this property falls between {{ stats.price_low | format_currency }} and {{ stats.price_high | format_currency }}.
    </p>
  </div>
</div>
{{ macros.page_footer(agent, 7) }}
{% endblock %}
