{# -----------------------------------------------------------------------------
   DATA TABLE
   Generic two-column data table
   Usage: {{ macros.data_table(rows) }}
   rows = [{'label': 'APN', 'value': '1234-567'}, ...]
   ----------------------------------------------------------------------------- #}
{% macro data_table(rows, title=None) %}
{% if title %}
<h3 class="table-title">{{ title }}</h3>
