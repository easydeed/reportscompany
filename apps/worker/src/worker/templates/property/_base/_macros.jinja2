    {% if image_url %}
    <img src="{{ image_url }}" alt="{{ title | default('Map') }}">
    {# Property marker overlay #}
    {% if property %}
    <div class="map-marker">
      <span class="map-marker-label">{{ property.street_address }}</span>
      <svg class="map-marker-pin" width="12" height="16" viewBox="0 0 12 16">
        <path d="M6 0C2.7 0 0 2.7 0 6c0 4.5 6 10 6 10s6-5.5 6-10c0-3.3-2.7-6-6-6z" fill="var(--color-accent)"/>
        <circle cx="6" cy="6" r="2.5" fill="white"/>
      </svg>
    </div>
    {% endif %}
    {% else %}
    <div class="map-placeholder">Map not available</div>
    {% endif %}
  </div>
</div>
{% endmacro %}

{# =============================================================================
   MARKET TRENDS MACROS
   Used by the optional Market Trends page (page 6, between Analysis & Comps).

   Key design principle: color by SENTIMENT (good/bad/neutral for sellers),
   NOT by direction (up/down). DOM going down = sentiment "good" = green.
   This avoids the "DOM falls but CSS shows red" bug from naive implementations.
   ============================================================================= #}

{# -----------------------------------------------------------------------------
   TREND CARD
   Displays a single market metric with optional trend arrow + change %.
   Usage: {{ macros.trend_card(label, metric, has_prior_data) }}

   metric shape:
     { current, prior, change_pct, direction, sentiment,
       formatted_current, formatted_prior }
   ----------------------------------------------------------------------------- #}
{% macro trend_card(label, metric, has_prior_data) %}
<div class="mt-card">
  <div class="mt-card-label">{{ label }}</div>
  {% if metric and metric.current is not none %}
  <div class="mt-card-value">{{ metric.formatted_current }}</div>
  {% if has_prior_data and metric.change_pct is not none %}
  <div class="mt-card-change mt-card-change--{{ metric.sentiment or 'neutral' }}">
    {% if metric.direction == "up" %}▲{% elif metric.direction == "down" %}▼{% else %}—{% endif %}
    {{ "%.1f" | format(metric.change_pct | abs) }}% vs prior 90 days
  </div>
  {% elif has_prior_data %}
  <div class="mt-card-note">No prior data</div>
  {% endif %}
  {% else %}
  <div class="mt-card-value mt-card-value--na">N/A</div>
  <div class="mt-card-note">Insufficient data</div>
  {% endif %}
</div>
{% endmacro %}

{# -----------------------------------------------------------------------------
   MARKET CONDITION SCORE DOTS
   Renders 10 dots, filled up to market_condition.score (1–10).
   Usage: {{ macros.condition_dots(score) }}
   ----------------------------------------------------------------------------- #}
{% macro condition_dots(score) %}
<div class="mt-condition-score">
  {% for i in range(10) %}
  <span class="mt-dot {% if i < score %}mt-dot--filled{% endif %}"></span>
  {% endfor %}
</div>
{% endmacro %}

{# -----------------------------------------------------------------------------
   PRICE RANGE BAR
   Visual price range indicator
   Usage: {{ macros.price_range_bar(low, high, subject_estimate) }}
   ----------------------------------------------------------------------------- #}
{% macro price_range_bar(low, high, subject_estimate=None) %}
{% set low_val = low | default(0, true) | float %}
{% set high_val = high | default(0, true) | float %}
{% set subj_val = subject_estimate | default(0, true) | float %}
<div class="price-range-bar">
  <div class="price-range-track">
    {% if subj_val > 0 and (high_val - low_val) > 0 %}
    {% set range = high_val - low_val %}
    {% set position = ((subj_val - low_val) / range * 100) | int %}
    <div class="price-range-marker" style="left: {{ position }}%">
      <span class="price-range-marker-label">{{ subject_estimate | format_currency }}</span>
    </div>
    {% endif %}
  </div>
  <div class="price-range-labels">
    <span class="price-range-low">{{ low | format_currency }}</span>
    <span class="price-range-high">{{ high | format_currency }}</span>
  </div>
</div>
{% endmacro %}
