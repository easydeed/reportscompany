{# -----------------------------------------------------------------------------
   COMP CARD
   Individual comparable property card
   Usage: {{ macros.comp_card(comp, index) }}
   ----------------------------------------------------------------------------- #}
{% macro comp_card(comp, index=1) %}
<div class="comp-card">
  {# Photo FIRST, then header — matches V0 design: image on top, header bar below #}
  <div class="comp-image">
    {% if comp.photo_url or comp.map_image_url %}
    <img src="{{ comp.photo_url | default(comp.map_image_url) }}" alt="{{ comp.address }}">
    {% else %}
    <div style="width:100%;height:100%;background:var(--color-surface);display:flex;align-items:center;justify-content:center;">
      <span style="color:var(--color-text-muted);font-size:11px;font-family:var(--font-body);">No Image Available</span>
    </div>
    {% endif %}
  </div>
  <div class="comp-card-header">
    <span class="comp-number">{{ index }}</span>
    <span class="comp-price">{{ comp.sale_price | format_currency }}</span>
  </div>
  <div class="comp-details">
    <h4 class="comp-address">{{ comp.address }}</h4>
    <div class="comp-meta">
      <span>{{ comp.bedrooms }} bd</span>
      <span class="comp-meta-divider">·</span>
      <span>{{ comp.bathrooms }} ba</span>
      <span class="comp-meta-divider">·</span>
      <span>{{ comp.sqft | format_number }} sqft</span>
    </div>
    <div class="comp-stats">
      <div class="comp-stat">
        <span class="comp-stat-value">{{ comp.price_per_sqft | format_currency }}</span>
        <span class="comp-stat-label">$/sqft</span>
      </div>
      <div class="comp-stat">
        <span class="comp-stat-value">{{ comp.sold_date }}</span>
        <span class="comp-stat-label">Sold</span>
      </div>
      <div class="comp-stat">
        <span class="comp-stat-value">{{ comp.distance_miles }} mi</span>
        <span class="comp-stat-label">Distance</span>
      </div>
    </div>
    {# C3: HOA + Lot size (conditional) #}
    <div class="comp-extras">
      {% if comp.lot_display %}
      <span class="comp-extra-item comp-lot">Lot: {{ comp.lot_display }}</span>
      {% endif %}
      {% if comp.hoa_fee is not none %}
        {% if comp.hoa_fee > 0 %}
        <span class="comp-extra-item comp-hoa">HOA: {{ comp.hoa_fee | format_currency }}{% if comp.hoa_frequency %}/{{ comp.hoa_frequency }}{% else %}/mo{% endif %}</span>
        {% else %}
        <span class="comp-extra-item comp-hoa comp-hoa--none">No HOA</span>
        {% endif %}
      {% endif %}
    </div>
  </div>
</div>
{% endmacro %}

{# -----------------------------------------------------------------------------
   COMP CONFIDENCE BAR
   Stand-alone confidence badge for theme-overridden comparables pages.
   Usage: {{ macros.comp_confidence_bar(comp_confidence_grade, comp_confidence_reason, comparables|length) }}
   ----------------------------------------------------------------------------- #}
{% macro comp_confidence_bar(grade, reason, comp_count=0) %}
{% if grade %}
<div class="comp-confidence-bar comp-confidence--{{ grade | lower }}">
  <span class="comp-confidence-badge">{{ grade }}</span>
  <span class="comp-confidence-label">
    {% if grade == 'A' %}Strict Match
    {% elif grade == 'B' %}{{ reason | default('Relaxed Match') }}
    {% elif grade == 'C' %}{{ reason | default('Broad Match') }}
    {% else %}Thin Market
    {% endif %}
  </span>
  <span class="comp-confidence-count">{{ comp_count }} comp{{ 's' if comp_count != 1 }}</span>
</div>
{% endif %}
{% endmacro %}

{# -----------------------------------------------------------------------------
   COMP GRID
   Grid of comparable cards
   Usage: {{ macros.comp_grid(comparables) }}
   ----------------------------------------------------------------------------- #}
{% macro comp_grid(comparables, confidence_grade=None, confidence_reason=None) %}
{# C3: Confidence badge header #}
{% if confidence_grade %}
<div class="comp-confidence-bar comp-confidence--{{ confidence_grade | lower }}">
  <span class="comp-confidence-badge">{{ confidence_grade }}</span>
  <span class="comp-confidence-label">
    {% if confidence_grade == 'A' %}Strict Match
    {% elif confidence_grade == 'B' %}{{ confidence_reason | default('Relaxed Match') }}
    {% elif confidence_grade == 'C' %}{{ confidence_reason | default('Broad Match') }}
