<table class="data-table">
  <tbody>
    {% for row in rows %}
    {% if row.value %}
    <tr>
      <td class="data-label">{{ row.label }}</td>
      <td class="data-value">{{ row.value }}</td>
    </tr>
    {% endif %}
    {% endfor %}
  </tbody>
</table>
{% endmacro %}

