          <div class="teal-comp-stat"><span class="lbl">Sq.Ft.</span><span class="val">{{ comp.sqft | format_number }}</span></div>
          <div class="teal-comp-stat"><span class="lbl">Bed/Bath</span><span class="val">{{ comp.bedrooms }}/{{ comp.bathrooms }}</span></div>
          <div class="teal-comp-stat"><span class="lbl">$/Sq.Ft.</span><span class="val">{{ comp.price_per_sqft | format_currency }}</span></div>
