  .teal-v0-p5 .analysis-table tbody tr:nth-child(even) td { background: #e9ecf7; }

  .teal-v0-p5 .analysis-table tfoot td {
    background: linear-gradient(90deg, var(--color-primary), var(--color-primary-dark));
