      <div class="lbl">Avg Sq Ft</div>
    </div>
    <div class="teal-stat-box">
      <div class="num">{{ stats.avg_beds | default(0) | round(1) }}</div>
      <div class="lbl">Avg Beds</div>
    </div>
    <div class="teal-stat-box">
      <div class="num">{{ stats.avg_price_per_sqft | format_currency }}</div>
      <div class="lbl">Avg $/Sqft</div>
    </div>
